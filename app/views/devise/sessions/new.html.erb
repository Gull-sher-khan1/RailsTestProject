<div class="container">
<div class="login-container">
<h2 class="login-heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'labels' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'fields' %>
  </div>

  <div class="field">
    <%= f.label :password, class:'labels' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'fields' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field field-div">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,class:'labels'%>
    </div>
  <% end %>

  <div class="actions button-div">
    <%= f.submit "Log in", class: 'login-button' %>
  </div>
<% end %>
<div class="signup-div">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
