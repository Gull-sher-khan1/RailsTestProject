<%if from==:destroy%>
  document.getElementsByClassName("follow-button")[0].innerHTML = '<%=button_to 'Follow', user_followings_path(@request.user_id), class: "user-follow", method: :post, remote: true%>';
<%else%>
  document.getElementsByClassName("follow-button")[0].innerHTML = '<%=button_to @request.request_accepted==false ? 'Follow request pending' : 'Following', following_path(@request.id), class: "user-follow", method: :delete, remote: true%>';
<%end%>
