<div class="home-page-content-posts">
  <div class="home-page-content-new-post-user">
    <div class="user-image-post">
      <%= render partial: 'userinfo', locals: {user: user}%>
    </div>
  </div>
  <div class="home-page-content-post-text">
    <div class="post-body">
      <p><%= post.text%></p>
    </div>
  </div>
  <div class="home-page-content-post-button home-page-content-post-button-border-removed">
    <%= button_tag "Like"%>
    <%= button_tag "comments", onclick: "show_comments(#{post_iteration.index})"%>
  </div>
  <div class="home-page-content-comments-div display-none">
    <div class="home-page-content-new-comment ">
      <%= form_with model: Comment.new(user_id: @user.id) ,url: {action: :create, controller: :comments, user_id: @user.id}, method: :post, class: 'new-comment' do |post_form| %>
      <!--must copy new_post from scss file before transferring-->
      <%= post_form.text_area :text, class: 'comment-text' %>
      <%= post_form.submit 'comment'%>
      <% end%>
    </div>
    <div class="home-page-content-comment-user">
      <div class="user-image-comment">
        <%= render partial: 'userinfo', locals: {user: @user}%>
      </div>
    </div>
    <div class="home-page-content-comment-text">
      <div class="comment-body">
        <p>asdasdasdasd</p>
      </div>
    </div>
    <div class="home-page-content-comment-button">
      <%= button_tag "Like"%>
    </div>
  </div>
</div>
