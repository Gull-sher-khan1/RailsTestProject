<div class="post-comment-delete-id-<%= comment.id%> comment">
  <div class="home-page-content-comment-user">
    <div class="user-image-comment">
      <%user = users[user_ids.find_index(comment.user_id)]%>
      <%= render partial: 'home/userinfo', locals: {user: user, partial: true, attachment: user.attachment}%>
    </div>
    <%if current_user.id == comment.user_id || current_user.id == post.user_id%>
      <div class="post_update_delete">
        <div class="comment-edit-<%=post.id%> edit-buttons-posts">
          <%if current_user.id == comment.user_id%>
            <%= button_to edit_comment_path(comment.id), method: :get, remote: :true, id:"edit_button_comment_#{comment.id}", class: 'post-edit-button' do%>
              <i class='fa fa-edit fa-lg'></i>
            <%end%>
            <%= button_tag type: 'submit', form: "edit_comment_#{comment.id}", id:"edit_done_button_comment_#{comment.id}", class: "display-none post-done-button" do%>
              <i class='fa fa-check fa-lg'></i>
            <%end%>
          <%end%>
        </div>
        <%= button_to comment_path(comment.id), method: :delete, remote: :true, class: 'post-delete-button' do%>
          <i class='fa fa-trash fa-lg'></i>
        <%end%>
      </div>
    <%end%>
  </div>

  <div class="home-page-content-comment-text">
    <div class="comment-body-<%=comment.id%> comment-body">
      <p><%=comment.text%></p>
      <%= form_for Comment.new ,url: {action: :update, controller: :comments, id: comment.id }, remote: true do |post_form| %>
      <%end%>
    </div>
  </div>
</div>
